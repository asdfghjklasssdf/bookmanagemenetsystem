<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Define a welcome file list -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlet mapping for ListBooksServlet -->
    <servlet>
        <servlet-name>ListBooksServlet</servlet-name>
        <servlet-class>bookmanagemenetsystem.ListBooksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListBooksServlet</servlet-name>
        <url-pattern>/ListBooksServlet</url-pattern>
    </servlet-mapping>

    <!-- Servlet mapping for AddBookServlet -->
    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>bookmanagemenetsystem.AddBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/AddBookServlet</url-pattern>
    </servlet-mapping>

    <!-- Servlet mapping for UpdateBookServlet -->
    <servlet>
        <servlet-name>UpdateBookServlet</servlet-name>
        <servlet-class>bookmanagemenetsystem.UpdateBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateBookServlet</servlet-name>
        <url-pattern>/UpdateBookServlet</url-pattern>
    </servlet-mapping>

    <!-- Servlet mapping for DeleteBookServlet -->
    <servlet>
        <servlet-name>DeleteBookServlet</servlet-name>
        <servlet-class>bookmanagemenetsystem.DeleteBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteBookServlet</servlet-name>
        <url-pattern>/DeleteBookServlet</url-pattern>
    </servlet-mapping>

    <!-- JSP file mapping -->
    <servlet>
        <servlet-name>JspServlet</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JspServlet</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>
</web-app>
